            color: white;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
        }

       
        .meeting-button1:hover {
            background-color: #2980b9;
        }

        /* Butonların konumları */
    
        #button1 {
            width: 150px;
            height: 150px;
            top: 200px;
            left: 750px;
        }

        #button2 {
            width: 150px;
            height: 150px;
            top: 375px;
            left: 750px;
        }

        #button3 {
            width: 150px;
            height: 150px;
            top: 200px;
            left: 550px;
            text-size-adjust: auto;
        }

        #button4 {
            width: 150px;
            height: 150px;
            top: 375px;
