    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kanban Meeting</title>
</head>
<body>
    <div class="">
        @Html.ActionLink("MEETING", "Index", "DataPage", new { }, new { @class = "btn meeting-button handshake-icon" })
    </div>



    <button class="meeting-button1" id="button1" onclick="redirectToPrPage()">
        <div class="pr-icon"></div>
        PRODUCTION
    </button>



    <button class="meeting-button1" id="button2" onclick="redirectToOtherPage()">
        <div class="ot-icon"></div>
