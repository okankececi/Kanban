        }
        .meeting-btn1 {
            position: absolute;
            width: 150px;
            height: 150px;
            top: 100px;
            left: 250px;
            padding: 10px 20px;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
        }
        .meeting-button2 {
            position: absolute;
            top: 600px;
            right: 550px; 
            padding: 10px 20px;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
          
        }
        .meeting-button {
            position: absolute;
            top: 200px;
            right: 550px;
            padding: 10px 20px;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
        }
        .ot-icon {
            opacity:0.7;
            width: 50px;
            height: 50px;
            background-image: url("/images/ot.png"); /* El sıkışma simgesi resmini eklemelisiniz */
            background-size: cover;
            background-repeat: no-repeat;
            margin-right: 10px;
        }
        .pt-icon {
            opacity: 0.7;
            width: 50px;
            height: 50px;
            background-image: url("/images/pt.png"); /* El sıkışma simgesi resmini eklemelisiniz */
            background-size: cover;
            background-repeat: no-repeat;
            margin-right: 10px;
        }
        .pr-icon {
            opacity: 0.7;
            width: 50px;
            height: 50px;
            background-image: url("/images/pr.png"); /* El sıkışma simgesi resmini eklemelisiniz */
            background-size: cover;
            background-repeat: no-repeat;
            margin-right: 10px;
        }

        .en-icon {
            opacity: 0.7;
            width: 50px;
            height: 50px;
            background-image: url("/images/en.png"); /* El sıkışma simgesi resmini eklemelisiniz */
            background-size: cover;
            background-repeat: no-repeat;
            margin-right: 10px;
        }

            .handshake-icon {
            width: 305px;
            height: 305px;
            background-image: url("/images/handshake-icon.png"); /* El sıkışma simgesi resmini eklemelisiniz */
