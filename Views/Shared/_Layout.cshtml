@{
    Layout = null;
    var user = HttpContext.Current.User;
    var userName = user.Identity.Name;

}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css">
    <!-- Add your custom stylesheets here -->
    <style>
        .modal-backdrop {
            opacity: 0.5; /* ya da tercihinize göre bir değer */
            width: 100%;
            height: 100%;
        }
        /* Add your custom styles here */
        body {
            padding-top: 56px;
            margin: 0; /* Eklediğimiz satır */
        }

        .navbar {
            background-color: #007bff;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            color: white;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: white;
        }

        .navbar-nav .nav-item.active .nav-link {
            background-color: #28a745;
        }

        .navbar-toggler-icon {
            background-color: white;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-info {
            background-color: #17a2b8;
        }

        .btn-success {
            background-color: #28a745;
        }
        body {
            margin: 0;
            padding: 0;
            background-color: #f0f0f0; /* Arka plan rengi */
        }

        .container {
            position: relative;
            width: 100%;
            max-width: 1200px; /* Örnek bir maksimum genişlik */
            margin: 0 auto; /* Sayfanın ortalanması */
        }

          .background-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
     /* Resmin dinamik yolunu burada kullan */
      background-size: cover;
      background-repeat: no-repeat;
      opacity: 0.2; /* Opaklık ayarı (0 ile 1 arasında bir değer) */
      z-index: 0; /* Background-image'i en arkaya yerleştir */
  }


    </style>
    <script type="text/javascript">
        window.onload = function () {
            // Sayfanın yüklenmesi tamamlandığında çalışan JavaScript fonksiyonu
            // Sayfa ölçeğini %80 olarak ayarlar
            document.body.style.zoom = "80%";
        }
    </script>
</head>
<body>
    <br />
    <br />

    <nav class="navbar navbar-expand-lg   fixed-top">
        <div class="container">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Main Page", "Index", "Home", new { }, new { @class = "nav-link" })
                </li>

            </ul>

            <ul class="navbar-nav ml-auto">


                <li class="nav-item">
                    @Html.ActionLink("Password Change", "Index", "PasswordChange", new { }, new { @class = "btn btn-primary mx-2" })
                </li>
                <li>
                    <div class="nav-item">
                        <button class="btn btn-primary">@Session["EmployeeNameSurname"]</button>
                    </div>
                </li>

                <li class="nav-item">
                    @Html.ActionLink("Logout", "Index", "Logout", new { }, new { @class = "btn btn-danger" })
                </li>

            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="background-image"></div>

    </div>
    <main role="main">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- Add your custom scripts here -->
</body>
</html>
